<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/timeIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weekdayHoursView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="seg a sex: 7h as 23h"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/timeIconView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weekendHoursView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        tools:text="sab e dom: 7h as 23h"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/timeIconView"
        app:layout_constraintTop_toBottomOf="@id/weekdayHoursView" />

    <ImageView
        android:id="@+id/phoneIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weekdayHoursView" />

    <TextView
        android:id="@+id/phoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="+551199999999"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/phoneIconView"
        app:layout_constraintBottom_toBottomOf="@id/phoneIconView"
        />

    <ImageView
        android:id="@+id/pinIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneIconView" />

    <TextView
        android:id="@+id/addressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/pinIconView"
        app:layout_constraintTop_toTopOf="@+id/pinIconView"
        tools:text="Rua do ouro, 297 - Serra" />

    <TextView
        android:id="@+id/stateLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Belo Horizonte - Minas Gerais"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/pinIconView"
        app:layout_constraintTop_toBottomOf="@id/addressView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>